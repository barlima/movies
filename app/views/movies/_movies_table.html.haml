%table.table.table-striped
  %tbody
    - movies.each_with_index do |movie, i|
      %tr
        %td= i + 1
        %td
          %img.img-rounded{ src: movie_poster(movie, data), style: 'width:100%' }
        %td
          %h4
            = link_to movie.title, movie_path(movie)
            - if data
              = "(#{movie_rating(movie, data)}/10.0)"
          %p
            %strong
              = link_to movie.genre.name, movies_genre_path(movie.genre)
            = ' (' + movie.released_at.to_s + ')'
          %p= movie_description(movie, data) || movie.description
